<UserControl x:Class="PlanKalendarz.Views.DodawanieEventu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanKalendarz.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel>
            <DockPanel Margin="10,10,10,10" Grid.Row="0">
                <Label Content="Nazwa Eventu :" Margin="0,0,20,0" FontSize="18"/>
                <TextBox x:Name="EventNameBox" Width="400" HorizontalAlignment="Left" FontSize="16" />
            </DockPanel>
            <DockPanel Grid.Row="1">
                <Button x:Name="ConfirmAdd" Grid.Row="1" Content="Dodaj" Width="70" Height="30" FontSize="18" Click="DodajEvent" HorizontalAlignment="Right" Margin="0,0,40,0"/>
            </DockPanel>

        </StackPanel>

    </Grid>
</UserControl>
